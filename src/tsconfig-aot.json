{
    "compilerOptions": {
        "target": "es5",
        "types": [
            //"core-js",
            "mocha",
            "node"
        ],
        //"baseUrl": "./app",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "lib": ["es2015","dom"],
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
      "files": [
    "./app/app.module.ts",
    "./app/main.ts"
  ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "compiled",        
        "skipMetadataEmit": true,
        "debug": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false }
}