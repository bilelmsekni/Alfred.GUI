{
    "compilerOptions": {
        "target": "es5",
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "removeComments": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true
    },
    "files": [        
        "app/app.module.ts",
        "app/main-aot.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "compiled",
        "skipMetadataEmit": true,
        "debug": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}