{
    "compilerOptions": {
        "target": "es5",
        "types": [
            "core-js",
            "mocha",
            "node"
        ],
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "files": [
        "app/app.module.ts",
        "app/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "aot",
        "skipMetadataEmit": true
    }
}